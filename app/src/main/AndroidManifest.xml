            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".presentation.receiver.ReminderReceiver" />
<receiver android:name=".presentation.activities.AlarmReceiver"
    android:exported="true"
    />
        <receiver android:name=".presentation.activities.ReminderBroadcastReceiver" />

    </application>

</manifest>

