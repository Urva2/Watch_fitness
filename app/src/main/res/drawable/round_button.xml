            <gradient
                android:startColor="#EAB20A"
                android:endColor="#082AEA"
                android:angle="45"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
